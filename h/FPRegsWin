/* Public Types */
struct FPRegType {
	wimp_i I_Name;
	wimp_i I_Val;
	wimp_i I_FPval;
	char T_Name[FPRegNameSize + 1];
	char T_Val[PrintedWordSize + 1];
	char T_FPval[PrintedDoubleSize + 1];
	char V_Name[ValStrSize + 1];
	char V_Val[ValStrSize + 1];
	char V_FPval[ValStrSize + 1];
};

/* Public Vars*/
extern struct FPRegType FPRegsIcons[34];

/* Public Functions */
wimp_w FPRegsWinCreate(int PosX, int PosY);
void ToggleWinDisplay(wimp_w FPRegsWin);
void FPRegsWinRedraw(wimp_w CodeWin);

